{
  "name": "webrtc-explorer",
  "version": "1.1.1",
  "description": "Chord inspired ring DHT algorithm using WebRTC as transport layer for P2P in the browser",
  "main": "src/explorer/index.js",
  "bin": {
    "sig-server": "node src/sig-server/bin"
  },
  "scripts": {
    "lint": "standard",
    "test": "npm run test:sig-server && npm run test:explorer",
    "test:explorer": "mocha tests/explorer/index.js",
    "test:sig-server": "mocha tests/sig-server/index.js",
    "sig-server": "node src/sig-server"
  },
  "standard": {
    "ignore": ["examples/explorer-b.js"]
  },
  "precommit": [
    "lint",
    "test"
  ],
  "keywords": [
    "routing",
    "webrtc",
    "chord",
    "peer",
    "p2p",
    "thesis",
    "cloud",
    "distributed",
    "hashring"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/diasdavid/webrtc-explorer"
  },
  "author": "David Dias <daviddias.p@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "debug": "^2.2.0",
    "hapi": "^13.0.0",
    "simple-peer": "^5.12.0",
    "socket.io": "^1.4.5",
    "socket.io-client": "^1.4.5",
    "webrtc-explorer-peer-id": "^1.1.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "mocha": "^2.4.5",
    "piri-piri": "^0.4.0",
    "pre-commit": "^1.1.2",
    "standard": "^6.0.5"
  }
}
